---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "KoLLOID";
const subtitle = "とけない個のための表現空間";
const explanation = `この空間には彩り豊かな表現がふわふわと浮遊しています。
好きな色の粒子をご覧ください。`;
---

<BaseLayout pageTitle={title} subtitle={subtitle} showCanvas={true}>
  <section>
    <h2 style="font-size: 1.4rem; margin-bottom: 0.5rem;">
      {subtitle}
    </h2>
    <p
      style="
        white-space: pre-line;
        margin-top: 1.5rem;
        font-size: 0.95rem;
        color: #333;
      "
    >
      {explanation}
    </p>
    <p style="margin-top: 2rem; font-size: 0.85rem; color: #888;">
      （ここに後で「粒子が漂うUI」が入ります）
    </p>
  </section>
</BaseLayout>