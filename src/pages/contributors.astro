---
import BaseLayout from "../layouts/BaseLayout.astro";
import contributors from "../data/contributors.json";

type Contributor = {
  displayName: string;
  genres?: string[];
  links?: Record<string, string>;
};

const LINK_LABELS: Record<string, string> = {
  instagram: "Instagram",
  youtube: "YouTube",
  facebook: "Facebook",
  note: "note",
  threads: "Threads",
  x: "X",
};
const BUILD_AT = new Date().toISOString();
// ---------- 並び順制御 ----------

// 主宰ID（固定）
const HOST_ID = "umineko";

// entries を分解
const allEntries = Object.entries(contributors) as [string, Contributor][];

const hostEntry = allEntries.find(([id]) => id === HOST_ID) ?? null;
const otherEntries = allEntries.filter(([id]) => id !== HOST_ID);

// シャッフル（Fisher–Yates）
function shuffle<T>(array: T[]): T[] {
  const a = [...array];
  for (let i = a.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [a[i], a[j]] = [a[j], a[i]];
  }
  return a;
}

const shuffledOthers = shuffle(otherEntries);

// 表示用配列：主宰 → ランダム参加者
const entries: [string, Contributor][] = hostEntry
  ? [hostEntry, ...shuffledOthers]
  : shuffledOthers;
---

<BaseLayout pageTitle="Contributors | KoLLOID" enableLinks={false} showCanvas={false}>
  <article style="max-width: 720px; margin: 0 auto; text-align: left;">
    <h2>Contributors</h2>
    <p style="font-size:0.8rem; color:#999; margin-top:0.4rem;">
      build: {BUILD_AT}
    </p>
    {entries.map(([id, c]) => (
      <section
        style="
          margin-top: 2.5rem;
          padding-bottom: 2rem;
          border-bottom: 1px solid rgba(0,0,0,0.1);
        "
      >
        <h3 style="margin-bottom: 0.4rem;">
          {c.displayName}
          {id === HOST_ID && (
            <span
              style="
                margin-left: 0.5rem;
                font-size: 0.75rem;
                color: #888;
                font-weight: normal;
              "
            >
              （主宰）
            </span>
          )}
        </h3>

        {/* ジャンル */}
        {c.genres && (
          <p style="font-size: 0.9rem; color: #555; margin: 0.3rem 0;">
            ジャンル：{c.genres.join("／")}
          </p>
        )}

        {/* リンク（横並び） */}
        {c.links && (
          <div
            style="
              margin-top: 0.6rem;
              display: flex;
              flex-wrap: wrap;
              gap: 0.8rem 1.2rem;
              font-size: 0.9rem;
            "
          >
            {Object.entries(c.links).map(([key, url]) => {
              const label = LINK_LABELS[key] ?? key;
              return (
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  style="
                    color: #444;
                    text-decoration: underline;
                    white-space: nowrap;
                  "
                >
                  {label}
                </a>
              );
            })}
          </div>
        )}
      </section>
    ))}
  </article>
</BaseLayout>